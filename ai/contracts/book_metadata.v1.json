{
  "version": "1.0",
  "type": "book_metadata",
  "fields": {
    "edition": {
      "title": {
        "type": "string",
        "optional": true,
        "prompt_label": "Title",
        "ai_hint": "Full title of this specific edition"
      },
      "subtitle": {
        "type": "string",
        "optional": true,
        "prompt_label": "Subtitle",
        "ai_hint": "Subtitle if exists"
      },
      "authors": {
        "type": "array[string]",
        "optional": true,
        "prompt_label": "Authors",
        "ai_hint": "List of authors for this edition"
      },
      "description": {
        "type": "string",
        "optional": true,
        "prompt_label": "Description",
        "ai_hint": "A short summary of a book's story"
      },
      "series": {
        "type": "string",
        "optional": true,
        "prompt_label": "Series",
        "ai_hint": "Book series name if part of a series"
      },
      "series_index": {
        "type": "integer",
        "optional": true,
        "prompt_label": "Series number",
        "ai_hint": "Position in the series"
      },
      "series_total": {
        "type": "integer",
        "optional": true,
        "prompt_label": "Series total",
        "ai_hint": "Total books in the series if known"
      },
      "language": {
        "type": "string",
        "optional": true,
        "prompt_label": "Language",
        "ai_hint": "Language of this edition (ISO 639-1 code preferred)"
      },
      "publisher": {
        "type": "string",
        "optional": true,
        "prompt_label": "Publisher",
        "ai_hint": "Publisher name"
      },
      "isbn10": {
        "type": "string",
        "optional": true,
        "prompt_label": "ISBN-10",
        "ai_hint": "10-digit ISBN if available"
      },
      "isbn13": {
        "type": "string",
        "optional": true,
        "prompt_label": "ISBN-13",
        "ai_hint": "13-digit ISBN if available"
      },
      "asin": {
        "type": "string",
        "optional": true,
        "prompt_label": "ASIN",
        "ai_hint": "Amazon Standard Identification Number if available"
      },
      "published": {
        "type": "date",
        "optional": true,
        "prompt_label": "Published date",
        "ai_hint": "Publication date in ISO format (YYYY-MM-DD)"
      },
      "year": {
        "type": "integer",
        "optional": true,
        "prompt_label": "Published year",
        "ai_hint": "Publication year (fallback if full date unknown)"
      },
      "tags": {
        "type": "array[string]",
        "optional": true,
        "prompt_label": "Tags",
        "ai_hint": "Possible tags for this edition: genre, universe, series name, characters, fractions, work type, etc"
      }
    },
    "original": {
      "title": {
        "type": "string",
        "optional": true,
        "prompt_label": "Original title",
        "ai_hint": "Title in original language"
      },
      "authors": {
        "type": "array[string]",
        "optional": true,
        "prompt_label": "Original authors",
        "ai_hint": "Original authors (may differ for translations)"
      },
      "language": {
        "type": "string",
        "optional": true,
        "prompt_label": "Original language",
        "ai_hint": "Language of the original work"
      },
      "year": {
        "type": "integer",
        "optional": true,
        "prompt_label": "Original year",
        "ai_hint": "Year of original publication"
      }
    },
    "confidence": {
      "type": "number",
      "optional": true,
      "range": [
        0.0,
        1.0
      ],
      "prompt_label": "Confidence",
      "ai_hint": "Confidence level (0.0 to 1.0)"
    }
  },
  "rules": [
    "All fields are optional",
    "Edition describes the concrete file",
    "Original describes the original work",
    "If edition language != original language, this is a translation",
    "Unknown fields must be ignored"
  ]
}
